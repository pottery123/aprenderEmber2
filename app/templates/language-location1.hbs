{{outlet}}
  <!--this panel is for a header-->
  <div class="panel panel-default panel-body">
    <div class="panel-body">
      Explore the words and Sounds
    </div>



<!--this panel is for the content-->

  <div class="panel panel-default words ">


{{#each model.data as |lang|}}
  <div id='{{lang.id}}' {{action "front" lang.id}}>

      <div class="primarylanguage" style="display:none;">
          {{lang.attributes.primarylanguage}}
      </div>


      <div class="translation">
        {{lang.attributes.translation}}
      </div>

      {{ log lang.attributes.sound}}

      <button onclick={{action 'play' lang.attributes.sound }}>lang.attributes.sound</button>

  </div>
{{/each}}
</div>

</div>
