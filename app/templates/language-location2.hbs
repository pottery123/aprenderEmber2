{{outlet}}

<div class="page-header">
  <button class="navButton" {{action "home"}}> <span class="glyphicon glyphicon-home" aria-hidden="true"></span></button>
  <button class="navButton2" {{action "back"}}><span class="	glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span></button>
  <h1>Aprender</h1>
</div>

{{#each model.data as |lang|}}
  <div id='{{lang.id}}' {{action "front" lang.id}}>
      <button class="primarylanguage" style="display:none;">
          <p class="words">
            {{lang.attributes.translation}}
          </p>
      </button>
      <button class="translation">
        <p class = "words">
          {{lang.attributes.primarylanguage}}
        </p>
      </button>
    </div>
    <button class="sound" onclick={{action 'play' lang.attributes.sound }}><span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span></button>
{{/each}}
